<script>
$(document).ready(function(){
	$("#aoe_button").click(function(){
			$("#new_aoe_post").slideToggle();
	});
	$("#send_aoe_post").click(function(){
			$("#new_aoe_post").slideUp();
	});
});
</script>
<img src="/img/banner_aoe.jpg" width="700" height="150"/>
<div class="clear"></div>
<br/>
<input type="button" value="Bài mới" class="btn pretty warning medium" id="aoe_button"/>
<br/>
<div id='new_aoe_post'>
<br/>
<br/>
<br/>
<h2>[AOE]Tạo chủ đề mới.</h2>
	<%= form_for @aoe_new_post,:html => { :multipart => true }, url: entertainments_path ,method: :post do |f|%>
		<table>
			<tr>
				<td>Tiêu đề</td> 
				<td><%=f.text_field :title%></td>
			</tr>
			<tr>
				<td>Nội dung</td>
				<td><%=f.text_area :content%></td>
			</tr>
		</table>
		<!-- <label for="up">Select picture(jpge,png)</label>
    <%= file_field 'upload', 'datafile' %> -->
	<input type="hidden" name="id" value="aoe"/>
	<div class="clear"></div>
	<%= f.submit "Gửi chủ đề", class: "btn medium success pretty",id: "send_aoe_post" %>	
	<%end%>
</div>

<hr/>
<table width="100%" border='1'>
	<tr align="center" bgcolor="##15A88" height="30" cellpadding="1" >
		<th width="5%"></th>
			<th width="70%"><font color="white" FACE="Geneva, Arial" size="2">Thread / Thread Starter</font></th>
			<th width="5%"><font color="white" FACE="Geneva, Arial" size="2">Viewed</font></th>
			<th width="20%"><font color="white" FACE="Geneva, Arial" size="2">Last Post</font></th>
		</tr>
	<% @aoes.each do |a|%>
		<tr  height="60" bgcolor="#F5F5FF">
			<td><img  src="/img/thread.gif"/></td>
			<td >Topic: <span style="font-weight: bold; "><a href="<%= entertainment_path(a.id)%>"><%= a.title%></a></span>
			<br/>
			<font size="2"> Đã gửi bởi</font> <font size="2" color="red"><%=a.user_post%></font> <font size="2">vào lúc <%=a.created_at.strftime("%R:%M:%S (%d-%m)")%></font>
			</td>
			<td align="center"><%= a.viewed %></td>
			<td bgcolor="#E1E4F2"><%= a.created_at.strftime("%R:%M:%S %d-%m")%></td>
		</tr>
	<%end%>
</table>