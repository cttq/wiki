<script>
$(document).ready(function(){
	$("#cdtl_button").click(function(){
			$("#new_cdtl_post").slideToggle();
	});
	$("#send_cdtl_post").click(function(){
			$("#new_cdtl_post").slideUp();
	});
});
</script>

<input type="button" value="Bài mới" class="btn pretty warning medium" id="cdtl_button"/>
<div id='new_cdtl_post'>
<br/>
<br/>
<br/>
<h2>[CDT]Tạo chủ đề mới.</h2>
	<%= form_for @cdtl_new_post, url: entertainments_path ,method: :post do |f|%>
		<table>
			<tr>
				<td>Tiêu đề</td> 
				<td><%=f.text_field :title%></td>
			</tr>
			<tr>
				<td>Nội dung</td>
				<td><%=f.text_area :content%></td>
			</tr>
		</table>
	<input type="hidden" name="id" value="cdtl"/>
	<%= f.submit "Gửi chủ đề", class: "btn medium success pretty",id: "send_cdtl_post" %>	
	<%end%>
</div>

